<!doctype html>
<html>

<head>
        <% include includes/head.ejs %>
</head>

<body>
        <header>
                <% include includes/header.ejs %>
        </header>
    <div class="container">
        

        <div class="row tab-container">
            

            <% if (user) { %>
                <p>
                    <strong>Hello, 
                    <%= user.firstname %>.
                </strong>
                        <br>
                       <form class="searchform" action="action_page.php">
                                <input type="text" placeholder="Search.." name="search">
                                <button type="submit"><i class="fa fa-search"></i></button>
                              </form>     
                              <br>
                              <br>   
                </p>
                <% if (visits) { %>
                    <% data= JSON.stringify(visits) %>
                    <% include includes/piechart.ejs %>
               <% } %>
                <% } %>

                <div class="tab-buttons">
                        <button class="w3-bar-item w3-button buttons-basic" onclick="openCity('London')">User Admin</button>
                        <button class="w3-bar-item w3-button buttons-basic" onclick="openCity('Paris')">Visit Admin</button>
                        <button class="w3-bar-item w3-button buttons-basic" onclick="openCity('Tokyo')">Form Admin</button>
                </div>

                <div id="London" class="city">
                        <h2>User Admin</h2>
                        <p>London is the capital of England.</p>
                        <% include includes/useradmin.ejs %>
                      </div>
                      
                      <div id="Paris" class="city" style="display:none">
                        <h2>Visit Admin</h2>
                        <p>Paris is the capital of France.</p> 
                        <% include includes/visitadmin.ejs %>
                      </div>
                      
                      <div id="Tokyo" class="city" style="display:none">
                        <h2>Form Admin</h2>
                        <p>Tokyo is the capital of Japan.</p>
                      </div>
        </div>
    <footer>
                <% include includes/footer.ejs %>            
    </footer>
    </body>

</html>